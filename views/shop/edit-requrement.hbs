<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-cneter">request for products</h2>
                <form action="/shop/edit-requrement/{{products._id}}" method="POST" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" value="{{products.Name}}" class="form-control">
                    <label for="">Category</label>
                    <select id="" name="Category" class="form-control" value="{{products.Category}}">
                        <option value="grocerry">grocerry</option>
                        <option value=" vegitable"> vegitable</option>
                        <option value="fish">fish</option>
                        <option value="fruits">fruits</option>
                        <option value="meet">meet</option>
                        <option value="cutted vegitable">cutted vegitable</option>
                        <option value="non cutted vegitable">non cutted vegitable</option>
                    </select>
                    <label for="">Price</label>
                    <input type="number" name="Price" class="form-control" value="{{products.Price}}">

                    <label for="">stock</label>
                    <input type="number" name="quantity" class="form-control" value="{{products.quantity}}">


                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" value="{{products.Description}}">


                    <label for="">Image</label>
                    <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px;height:auto" id="imgview"
                        class="pt-3">
                    <input type="file" name="Image" class="form-control" >

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                    <a href="/shop" class="btn btn-danger mt-4 ">Home</a>
                </form>
            </div>
        </div>
    </div>
</section>