<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-cneter">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="POST" enctype="multipart/form-data">
                    <!--enctype is used to when want send file -->
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{product.Name}}">


                    <label for="">Category</label>
                    <select id="cars" name="Category" class="form-control" value="{{product.Category}}">
                        <option value="grocerry">grocerry</option>
                        <option value=" vegitable"> vegitable</option>
                        <option value="fish">fish</option>
                        <option value="fruits">fruits</option>
                        <option value="meet">meet</option>
                        <option value="cutted vegitable">cutted vegitable</option>
                        <option value="non cutted vegitable">non cutted vegitable</option>
                    </select>

                    <label for="">discount(RS)</label>
                    <input type="number" name="discount" class="form-control" value="{{product.discount}}">


                    <label for="">Price</label>
                    <input type="number" name="Price" class="form-control" value="{{product.Price}}">

                    <label for="">stock</label>
                    <input type="number" name="stock" class="form-control" value="{{product.stock}}">


                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" value="{{product.Description}}">

                    <code>Image must select</code><br>
                    <label for="">Image</label>
                    <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px;height:auto" id="imgview"
                        class="pt-3">
                    <input type="file" name="Image" class="form-control " onchange="viewImage(event)" required>

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                    <a href="/admin" class="btn btn-danger mt-4 ">back</a>

                </form>
            </div>
        </div>
    </div>
</section>

<script>//java script function(viewImage) is used to change picture 
    function viewImage(event) {
        document.getElementById('imgview').src = URL.createObjectURL(event.target.files[0])
    }

</script>