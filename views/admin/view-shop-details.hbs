<section>
    <div class="container mt-4">
        <div class="row ">
            <a href="/admin/add-shop" class="btn btn-primary ml-auto mb-3 shadow-lg rounded" style="width:100px; margin-left:auto; ">
                Add shop</a>
        </div>
        <table class="table" id="shopTable">
            <thead>
                <tr>
                    <th style="border: none;" scope="col">Name</th>
                    <th style="border: none;" scope="col">Email</th>
                    <th style="border: none;" scope="col">block</th>
                    <th style="border: none;" scope="col">Address</th>
                    <th style="border: none;" scope="col">!</th>
                </tr>
            </thead>
            <tbody>
                {{#each details}}
                <tr>
                    <td style="border: none;">{{this.shopName}}</td>
                    <td style="border: none;">{{this.Email}}</td>
                    <td style="border: none;">{{this.center}}</td>
                    <td style="border: none;">{{this.address}}</td>
                    <td style="border: none;"><a href="/admin/edit-shop/{{this._id}}" class="btn btn-success shadow">Edit</a>
                        <a href="/admin/delete-shop/{{this._id}}" class="btn btn-danger shadow"
                            onclick="return confirm('Are you want to delete {{this.Name}}')">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    $(function () {
        $('#shopTable').DataTable();
    });

</script>