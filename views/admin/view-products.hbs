<section>
  <div class="container mt-4">
    <div class="row ">
      <a href="/admin/add-product" class="btn btn-primary ml-auto mb-3 shadow-lg"
        style="width:120px; margin-left:auto; ">Add Product</a>
    </div>
    <table class="table mt-3" id="myTable1">
      <thead>
        <tr>
          <th scope="col" style="border: none;">Title</th>
          <th scope="col" style="border: none;">Catagory</th>
          <th scope="col" style="border: none;">Description</th>
          <th scope="col" style="border: none;">quantity</th>
          <th scope="col" style="border: none;">Price</th>
          <th scope-"col" style="border: none;">discount</th>
          <th scope-"col" style="border: none;">Image</th>
          <th scope-"col" style="border: none;">!</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td style="border: none;">{{this.Name}}</td>
          <td style="border: none;">{{this.Category}}</td>
          <td style="border: none;">{{this.Description}}</td>
          <td style="border: none;">{{this.stock}}.Kg</td>
          <td style="border: none;">Rs: {{this.Price}}/-</td>
          <td style="border: none;">Rs: {{this.discount}}</td>
          <td style="border: none;"><img style="width:50px;height:50px;" src="/product-images/{{this._id}}.jpg" alt="">
          </td>
          <td style="border: none;"><a href="/admin/edit-product/{{this._id}}" class="btn btn-success shadow">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger shadow"
              onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
