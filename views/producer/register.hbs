<style>
    .card-title {
        font-weight: 300;
    }

    .btn {
        font-size: 14px;
        margin-top: 20px;
    }

    .login-form {
        width: 400px;
        margin: 40px;
    }
</style>

<div class="global-container">
    <div class="card login-form shadow pb-9">
        <div class="card-body">
            <h3 class="card-title text-center">Registeration</h3>
            <div class="card-text">
                <!--
			<div class="alert alert-danger alert-dismissible fade show" role="alert">Incorrect username or password.</div> -->
                <form class="" action="/producer/register" method="POST">
                    <!-- to error: add class "has-danger" -->
                    <div class="">
                        <label for="">Name</label>
                        <input type="text" name="name" class="form-control" required>
                    </div>
                    <div class="">
                        <label for="">Email address</label>
                        <input type="email" name="Email" class="form-control" required>
                    </div>
                    <div class="">
                        <label for="">address</label>
                        <input type="address" name="address" class="form-control" style="height: 4rem;" required>
                    </div>
                    <div class="">
                        {{#each block}}

                        <label for="" class="radio-inline">
                            <input type="radio" name="block" value="{{this.center}}" checked>{{this.center}}
                        </label>
                        {{/each}}
                    </div>
                    <div class="">
                        <label for="">phone</label>
                        <input type="number" name="phone" class="form-control" required>
                    </div>
                    <div class="">
                        <label for="">Password</label>
                        <input type="password" name="Password" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    {{#if loginErr}}

                    <div class="col-12 col-md-12 col-xl-12 d-flex justify-content-center ">
                        <p class="error text-danger ">{{loginErr}}</p>
                    </div>
                    {{/if}}
                    <div class="">
                        <a href="/producer/login" class="">already have an account?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>